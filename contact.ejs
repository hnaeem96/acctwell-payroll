<!DOCTYPE html>
<html lang="en">
    <head>
        <% include templates/head.ejs %>
    </head>

    <body>
        <% include templates/header.ejs %>

        <section class="contact-section">
            <div class="container">
                <div class="map-section-header">
                    <h2 class="page-heading">Come See Us</h2>
                </div>
                <div class="map-section-content">
                    <div id="map" class="map"></div>
                    <h3>
                        <p>9229 QUEENS BLVD,</p>
                        <p>Suite CC</p>
                        <p>Rego Park, NY 11374</p>
                    </h3>
                    <h3>
                        <p>Monday - Friday</p>
                        <p>9:00 AM - 6:00 PM</p>
                    </h3>
                    <h3>
                        <p>(718) 897-1111</p>
                    </h3>
                    <script>
                        function initMap() {
                            var uluru = {lat: 40.732666, lng: -73.866918};
                            var map = new google.maps.Map(document.getElementById('map'), {
                                zoom: 16,
                                center: uluru
                            });
                            var marker = new google.maps.Marker({
                                position: uluru,
                                map: map
                            });
                        }
                    </script>
                </div>
                <div class="contact-section-header">
                    <h2 class="page-heading">Leave a Message</h2>
                </div>
                <div class="contact-section-content">
                    <div class="row">
                        <div class="col-sm-8 offset-sm-2">
                            <form>
                                <div class="form-group">
                                    <input class="form-control" type="text" placeholder="Name" id="name-input" required>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="search" placeholder="E-mail" id="email-input" required>
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" placeholder="Message" id="message-input" rows="3" required></textarea>
                                </div>
                                <button type="submit" class="btn submit-btn">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <% include templates/footer.ejs %>


        <script async defer
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBOGpl06hZ9FF17wDHuXoOwcUxGPxL6bSw&callback=initMap">
        </script>
        <% include templates/scripts.ejs %>
    </body>
</html>
